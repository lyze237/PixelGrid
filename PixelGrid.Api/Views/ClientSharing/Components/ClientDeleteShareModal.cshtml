<div class="modal fade" id="clientDeleteShareModal" tabindex="-1">
    <div class="modal-dialog">
        <form asp-controller="ClientSharing" asp-action="Delete" enctype="multipart/form-data" method="post">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Delete Share with User</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <label for="deleteClientShareModalClientId" class="form-label">Client</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text">Client Id</span>
                        <input type="text" class="form-control" id="deleteClientShareModalClientId" name="clientId" placeholder="Client Id" required="required" readonly="readonly" minlength="3">
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text">Client Name</span>
                        <input type="text" class="form-control" id="deleteClientShareModalClientName" placeholder="Client Name" required="required" readonly="readonly" minlength="3">
                    </div>

                    <label for="deleteClientShareModalUserId" class="form-label">User</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text">User Id</span>
                        <input type="text" class="form-control" id="deleteClientShareModalUserId" name="userId" placeholder="User Id" required="required" readonly="readonly" minlength="3">
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text">User Email</span>
                        <input type="text" class="form-control" id="deleteClientShareModalUserEmail" placeholder="Email" required="required" readonly="readonly" minlength="3">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Delete</button>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
const deleteModal = document.getElementById('clientDeleteShareModal');
deleteModal.addEventListener('show.bs.modal', function (event) {
    const button = event.relatedTarget;
    
    const clientId = button.getAttribute('data-bs-clientId');
    const clientName = button.getAttribute('data-bs-clientName');
    const userId = button.getAttribute('data-bs-userId');
    const userEmail = button.getAttribute('data-bs-userEmail');
    
    deleteModal.querySelector('.modal-title').textContent = 'Delete Share with User ' + userEmail;
    deleteModal.querySelector('#deleteClientShareModalClientId').value = clientId;
    deleteModal.querySelector('#deleteClientShareModalClientName').value = clientName;
    deleteModal.querySelector('#deleteClientShareModalUserId').value = userId;
    deleteModal.querySelector('#deleteClientShareModalUserEmail').value = userEmail;
});
</script>